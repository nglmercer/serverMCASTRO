---
import type { SystemMetrics } from 'src/types/server';

interface Props {
  metrics: SystemMetrics;
}

const { metrics } = Astro.props;
---

<div class="system-status-card">
  <h2>System Resources</h2>
  
  <div class="resource-list">
    <div class="resource-item">
      <div class="resource-header">
        <span class="resource-label">CPU Usage</span>
        <span class={`resource-value ${metrics.cpu > 80 ? 'danger' : 'success'}`}>
          {metrics.cpu}%
        </span>
      </div>
      <div class="progress-bar">
        <div 
          class={`progress-fill ${metrics.cpu > 80 ? 'danger' : 'success'}`} 
          style={`width: ${metrics.cpu}%`}>
        </div>
      </div>
    </div>
    
    <div class="resource-item">
      <div class="resource-header">
        <span class="resource-label">Memory Usage</span>
        <span class={`resource-value ${metrics.memory > 80 ? 'danger' : 'warning'}`}>
          {metrics.memory}%
        </span>
      </div>
      <div class="progress-bar">
        <div 
          class={`progress-fill ${metrics.memory > 80 ? 'danger' : 'warning'}`} 
          style={`width: ${metrics.memory}%`}>
        </div>
      </div>
    </div>
    
    <div class="resource-item">
      <div class="resource-header">
        <span class="resource-label">Network</span>
        <span class="resource-value primary">{metrics.network}%</span>
      </div>
      <div class="progress-bar">
        <div 
          class="progress-fill primary" 
          style={`width: ${metrics.network}%`}>
        </div>
      </div>
    </div>
  </div>
</div>

<style>
  .system-status-card {
    background-color: var(--color-dark-900);
    border: 1px solid var(--color-gray-800);
    border-radius: var(--border-radius-xl);
    padding: var(--space-6);
  }
  
  h2 {
    font-size: var(--font-size-lg);
    font-weight: 600;
    margin-bottom: var(--space-4);
  }
  
  .resource-list {
    display: flex;
    flex-direction: column;
    gap: var(--space-4);
  }
  
  .resource-item {
    width: 100%;
  }
  
  .resource-header {
    display: flex;
    justify-content: space-between;
    font-size: var(--font-size-sm);
    margin-bottom: var(--space-1);
  }
  
  .resource-label {
    color: var(--color-gray-400);
  }
  
  .progress-bar {
    width: 100%;
    height: 8px;
    background-color: var(--color-gray-700);
    border-radius: var(--border-radius-full);
    overflow: hidden;
  }
  
  .progress-fill {
    height: 100%;
    border-radius: var(--border-radius-full);
  }
  .resource-value {
    background-color: transparent !important;
  }
  .resource-value.success,
  .progress-fill.success {
    color: var(--color-green-500);
    background-color: var(--color-green-500);
  }
  
  .resource-value.warning,
  .progress-fill.warning {
    color: var(--color-yellow-500);
    background-color: var(--color-yellow-500);
  }
  
  .resource-value.primary,
  .progress-fill.primary {
    color: var(--color-primary-500);
    background-color: var(--color-primary-500);
  }
  
  .resource-value.danger,
  .progress-fill.danger {
    color: var(--color-red-500);
    background-color: var(--color-red-500);
  }
</style>